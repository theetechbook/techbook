<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/post_header_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="160dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/techbooklogo_removebg_preview"
            tools:ignore="InvalidId" />

        <TextView
            android:id="@+id/brand_name"
            android:layout_width="51dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menu_img"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_more_vert_" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/post_img"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_below="@+id/post_header_layout"
        android:layout_marginTop="3dp"
        android:src="@drawable/happy" />

    <RelativeLayout
        android:id="@+id/post_footer_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/post_img">

        <ImageView
            android:id="@+id/heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_favorite_24" />

        <ImageView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/heart"
            android:src="@drawable/ic_reply" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/reply"
            android:src="@drawable/ic_mini_send" />

        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_bookmark" />

    </RelativeLayout>

    <TextView
        android:id="@+id/likes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_footer_layout"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold" />

<TextView
    android:id="@+id/description_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/likes_txt"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:textSize="13sp"
    android:textColor="@color/black"/>

    <RelativeLayout
        android:id="@+id/comments_latout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/description_txt"
        android:layout_marginTop="10dp">


        <EditText
            android:id="@+id/comment_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:background="@null"
            android:hint="Add a comment..."
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>

</RelativeLayout>
